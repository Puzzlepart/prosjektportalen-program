{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "jsx": "react",
        "declaration": false,
        "sourceMap": true,
        "removeComments": false,
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "types": [
            "sharepoint",
            "react"
        ],
        "noImplicitAny": false,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "pretty": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "node_modules/**/*"
    ]
}